<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingTop="@dimen/padding_norm"
              android:paddingBottom="@dimen/padding_norm"
              android:paddingRight="@dimen/padding_small"
              android:paddingLeft="@dimen/padding_small">
    
    <TextView
        android:id="@+id/item_added_city_tv_city"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_norm"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/gray"
        android:text="上海"/>

    <ImageView
        android:id="@+id/item_added_city_iv_describe"
        android:layout_toRightOf="@+id/item_added_city_tv_data"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/notify_ic_cloudy"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/item_added_city_tv_describe"
        android:layout_toRightOf="@+id/item_added_city_iv_describe"
        android:layout_toLeftOf="@+id/item_added_city_tv_temperature"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_norm"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/gray"
        android:text="未知"/>

    <TextView
        android:id="@+id/item_added_city_tv_temperature"
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_norm"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/gray"
        android:text="0~0℃"/>
</LinearLayout>
