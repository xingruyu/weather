<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingTop="@dimen/padding_norm"
              android:paddingBottom="@dimen/padding_norm"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/textsize_norm"
        android:text="分享到"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_big">

        <TextView
            android:id="@+id/dialog_share_wxfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_bigger"
            android:drawableTop="@drawable/selector_share_wxfriend"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:text="微信"/>

        <TextView
            android:id="@+id/dialog_share_wxgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_bigger"
            android:layout_marginBottom="@dimen/margin_bigger"
            android:layout_marginRight="@dimen/margin_norm"
            android:drawableTop="@drawable/selector_share_wxgroup"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:text="朋友圈"/>

        <TextView
            android:id="@+id/dialog_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_bigger"
            android:layout_marginBottom="@dimen/margin_bigger"
            android:layout_marginLeft="@dimen/margin_norm"
            android:drawableTop="@drawable/selector_share_qq"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:text="QQ"/>

        <TextView
            android:id="@+id/dialog_share_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_bigger"
            android:drawableTop="@drawable/selector_share_sms"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:text="短信"/>
    </LinearLayout>

</LinearLayout>
