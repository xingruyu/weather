<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_big"
    android:paddingTop="@dimen/padding_big">

    <TextView
        android:id="@+id/item_forecast_weather_tv_data"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_small"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="今天"/>

    <ImageView
        android:id="@+id/item_forecast_weather_iv_describe"
        android:layout_toRightOf="@+id/item_forecast_weather_tv_data"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:src="@drawable/notify_ic_cloudy"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/item_forecast_weather_tv_describe"
        android:layout_toRightOf="@+id/item_forecast_weather_iv_describe"
        android:layout_toLeftOf="@+id/item_forecast_weather_tv_temperature"
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_small"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="未知"/>

    <TextView
        android:id="@+id/item_forecast_weather_tv_temperature"
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_small"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/white"
        android:text="0~0℃"/>

</LinearLayout>
